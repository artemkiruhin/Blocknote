@page
@model Blocknote.RazorFrontend.Pages.Login

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Вход</title>
    <link rel="stylesheet" href="css/auth-form-style.css">
</head>
<body>
<div class="auth-container">
    <div class="auth-tabs">
        <a asp-page="Login" class="auth-tab active">Вход</a>
        <a asp-page="Register" class="auth-tab">Регистрация</a>
    </div>
        
    <form class="auth-form" method="post">
        <div class="form-group">
            <input type="text" value="@Model.ViewModel.Username" asp-for="ViewModel.Username" class="form-input" id="user" placeholder=" ">
            <label class="form-label" for="email">Имя пользователя</label>
            <div class="error-message"></div>
        </div>
            
        <div class="form-group">
            <input type="password" value="@Model.ViewModel.Password" asp-for="ViewModel.Password" class="form-input" id="password" placeholder=" ">
            <label class="form-label" for="password">Пароль</label>
            <div class="error-message"></div>
        </div>
            
        <button type="submit" class="submit-btn">Войти</button>
    </form>
</div>
</body>
</html>