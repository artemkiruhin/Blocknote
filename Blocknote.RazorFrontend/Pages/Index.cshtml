@page
@using Blocknote.RazorFrontend.Pages.Shared
@model Blocknote.RazorFrontend.Pages.Index

@{
    Layout = "Shared/_Layout";
}


    <div class="header">
        <h1>Мои заметки</h1>
        <button class="add-note-btn">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Добавить заметку
        </button>
    </div>
<div class="container">
    @{
        if (Model.Notes.Any())
        {
            foreach (var note in Model.Notes)
            {
                <div class="note-card">
                    <div class="note-card-content">
                        <span class="note-card-title">@note.Title</span>
                        <span class="note-card-subtitle">@note.Subtitle</span>
                    </div>
                    <div class="note-card-menu">
                        <div class="menu-item" data-action="open">Открыть</div>
                        <div class="menu-item" data-action="edit">Редактировать</div>
                        <div class="menu-item delete" data-action="delete">Удалить</div>
                    </div>
                </div>
            
            
                <div class="note hidden">
                    <div class="note-header">
                        <span class="note-title">@note.Title</span>
                        <button class="close-note-btn">×</button>
                    </div>
                    <div class="note-content">
                        <p>@note.Content</p>
                    </div>
                </div>


            
            }
        }
        else
        {
        
        }
    
    
        <div class="modal hidden">
            <div class="modal-content">
                <form method="post">
                    <h2>Новая заметка</h2>
                    <input type="text" name="Title" value="@Model.AddViewModel.Title" asp-for="@Model.AddViewModel.Title" placeholder="Заголовок" class="modal-input">
                    <input type="text" name="Subtitle" value="@Model.AddViewModel.Subtitle" asp-for="@Model.AddViewModel.Title" placeholder="Подзаголовок" class="modal-input">
                    <textarea name="Content" value="@Model.AddViewModel.Content" asp-for="@Model.AddViewModel.Title" placeholder="Содержание заметки" class="modal-textarea"></textarea>
                    <div class="modal-buttons">
                        <button class="modal-cancel">Отмена</button>
                        <button type="submit" class="modal-save">Сохранить</button>
                    </div>
                </form>
            </div>
        </div>

    }


</div>



