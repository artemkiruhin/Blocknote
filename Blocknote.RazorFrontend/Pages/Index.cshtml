@page
@model Blocknote.RazorFrontend.Pages.Index

<div class="note-card">
    <div class="note-card-content">
        <span class="note-card-title">Заметка о путешествии</span>
        <span class="note-card-subtitle">Планы на следующий отпуск</span>
    </div>
    <div class="note-card-menu">
        <div class="menu-item" data-action="open">Открыть</div>
        <div class="menu-item" data-action="edit">Редактировать</div>
        <div class="menu-item delete" data-action="delete">Удалить</div>
    </div>
</div>


<div class="note hidden">
    <div class="note-header">
        <span class="note-title">Заголовок</span>
        <button class="close-note-btn">×</button>
    </div>
    <div class="note-content">
        <p>Содержимое заметки...</p>
    </div>
</div>

<div class="modal hidden">
    <div class="modal-content">
        <h2>Новая заметка</h2>
        <input type="text" placeholder="Заголовок" class="modal-input">
        <input type="text" placeholder="Подзаголовок" class="modal-input">
        <textarea placeholder="Содержание заметки" class="modal-textarea"></textarea>
        <div class="modal-buttons">
            <button class="modal-cancel">Отмена</button>
            <button class="modal-save">Сохранить</button>
        </div>
    </div>
</div>